{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es6", "dom", "es2015.iterable", "es2017.string", "es2018.promise"],
        "baseUrl": ".",
        "types": ["node", "svelte", "geojson"],
        "paths": {
            "svelte-native": ["node_modules/@akylas/svelte-native"],
            "@nativescript/core": ["node_modules/@akylas/nativescript"],
            "~/*": ["app/*"]
        }
    },
    "include": ["app/**/*", "references.d.ts"],
    "exclude": ["node_modules", "platforms", "**/angular"]
}
